<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ICD.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ICD"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:v="clr-namespace:ICD.Views"
    FlowDirection="LeftToRight"
    Shell.NavBarIsVisible="True"
    Title="IdealDiagnosis">
    


    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="Green"/>
    </Shell.Behaviors>

    <!--<Shell.MenuItemTemplate>
        <DataTemplate>
            <Label Text="{Binding Title}"/>
        </DataTemplate>
    </Shell.MenuItemTemplate>-->

    <ShellContent
                Title="loading"
                ContentTemplate="{DataTemplate v:LoadingPage}"
                Route="LoadingPage" />
    <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate v:HomePage}"
                Route="HomePage" />
    <!--<ShellContent
                Title="MainPage"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />-->

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding CloseAppCommand}"/>
    </Shell.BackButtonBehavior>
</Shell>
